<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Minion Roll Count!</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <style>
    body 
    {
      background-color: lavender;
    }

    .container
    {
      text-align: center;
    }

    a
    {
      color: black;
    }

    a:hover
    {
      color: yellow;
    }
  </style>
</head>
<body>
@using Tamagatchi.Models;
  <div class="container">
    <h1>All Minions: </h1>

      @foreach (BaseTamagatchi item in Model)
      {
      <h2><a href="/play/@item.Id">@item.Name</a></h2>
      }

      <a href='/play/new'>Add another item</a>
      <a href='/play'>View all items</a>
  </div>
</body>
</html>